# AutoDNS API Configuration
# Copy this file to .env and fill in your credentials

# Your AutoDNS API username
AUTODNS_USER=your-username

# Your AutoDNS API password
AUTODNS_PASSWORD=your-password

# Your AutoDNS API context (usually 4 for production)
AUTODNS_CONTEXT=4

# AutoDNS API URL (default: https://api.autodns.com/v1)
AUTODNS_API_URL=https://api.autodns.com/v1

# SPF record configuration for _spf.example.com
MAIN_SPF_RECORD_NAME=_spf.example.com
MAIN_SPF_RECORD_VALUE=v=spf1 a mx include:_spf.domain1.com a:mailserver.exmaple.com -all
EXPECTED_SPF=v=spf1 a mx include:_spf.example.com -all

# DMARC record configuration (no spaces after semicolons for strict compliance)
EXPECTED_DMARC=v=DMARC1;p=reject;sp=reject;adkim=s;aspf=s;rua=mailto:dmarc-reports@example.com;ruf=mailto:dmarc-failures@example.com;fo=d:s
DMARC_REPORT_AUTH_DOMAIN=exxample.com

# DKIM configuration - comma-separated list of selectors to check
DKIM_SELECTORS=s1,s2
DKIM_CONFIG_PATH=dkim.config.json

# Dry-run mode - set to 'true' to generate reports without making changes to AutoDNS
# Can also be activated by running: npm start -- --dry-run
DRY_RUN=false

# Test domains - set to 'true' to process only specific domains for testing
TEST_DOMAINS_ENABLED=false

# Comma-separated list of domains to process when TEST_DOMAINS_ENABLED=true
TEST_DOMAINS=domain1.com,domain2.com,domain3.com

# Email configuration for sending reports
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@exammple.com
# Multiple recipients can be comma-separated: admin@example.com,ops@example.com
EMAIL_TO=admin@example.com
EMAIL_SUBJECT=Domain Health Checker Report
